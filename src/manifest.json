{
    "name": "Youtube Downloader",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Helps Download Youtube videos",

    "permissions": ["downloads", "activeTab", "declarativeContent"],

    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },

    "page_action": {
      "default_title": "Download From Youtube",
      "default_popup": "popup.html"
    }
}
